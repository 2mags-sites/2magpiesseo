# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# API Keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Admin/Security Keys (use strong random strings)
ADMIN_SECRET_KEY=change_this_to_random_string
CACHE_CLEAR_KEY=change_this_to_different_random_string

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_NAME=Your Company Name
BCC_RECIPIENTS=admin@yourdomain.com,backup@yourdomain.com

# Notification Recipients
CONTACT_FORM_TO=info@yourdomain.com